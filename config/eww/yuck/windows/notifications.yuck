(defwidget notifications []
  (box 
    :class "notifications" 
    :space-evenly false 
    :orientation "v"
    (for i in "[2, 1, 0]"
      (revealer
        :reveal {notifications.popups[i] != "null" && !menu_rev}
        :transition "slidedown"
        :duration duration
        (notification 
          :notification {notifications.popups[i]} 
          :floating true
        )
      )
    )
  )
)